<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.name %>の情報
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.affiliation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @user.name %>のプロトタイプ
      </h2>
      <div class="user__card">
        <% @prototypes.each do |prototype| %>
          <div class="prototype">
            <h3><%= prototype.name %></h3>
            <p><strong>投稿者:</strong> <%= prototype.user.name %></p>
            <p><strong>画像:</strong> <%= image_tag prototype.image_url %></p>
            <p><strong>キャッチコピー:</strong> <%= prototype.catch_copy %></p>
            <p><strong>コンセプト:</strong> <%= prototype.concept %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>